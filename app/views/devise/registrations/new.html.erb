<% provide :title, t(".signup") %>
<div class="bg-login">
  <div class="container-login">
    <h4><%= "signup" %></h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group text-left mt-4">
        <%= f.label :name, t(".name") %>
        <%= f.text_field :name, class: "form-control form-control-fix" %>
      </div>
      <div class="form-group text-left">
        <%= f.label :email, t(".email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-fix" %>
      </div>
      <div class="form-group text-left">
        <%= f.label :phonenumber, t(".phonenumber") %>
        <%= f.telephone_field :phonenumber, class: "form-control form-control-fix" %>
      </div>
      <div class="form-group text-left">
        <%= f.label :password, t(".password") %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-fix" %>
      </div>
      <div class="form-group text-left">
        <%= f.label :password_confirmation, t(".password_confirm") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-fix" %>
      </div>
      <%= render "devise/shared/links" %>
      <div class="actions">
        <%= f.submit t(".signup"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
