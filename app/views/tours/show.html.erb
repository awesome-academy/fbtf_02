<% provide :title, t(".tour_details") %>
<div class="pb-4 pt-4">
  <div class="container">
    <div class="title-name-tour-detail">
      <h2><%= @tour_details.title %></h2>
    </div>
    <div class="row">
      <div class="col-md-8 order-md-first">
        <%= render "tour_details" %>
        <div class="border mt-4">
          <% if logged_in? %>
          <div class="container-comment border-bottom">
            <h4><%= t(".your_review") %></h4>
            <%= render "reviews/review_form" %>
          </div>
          <% end %>
          <div class="scrollbar">
            <%= render @reviews %>
          </div>
        </div>
      </div>
      <div class="col-md-4 order-sm-first order-first">
        <% if logged_in? %>
          <div class="container-book-tour sticky-top">
            <h3 class="price-tour-detail">
              Giá tiền: <%= number_to_currency(@tour_details.price) %>
            </h3>
            <div class="form-group">
              <% if (@tour_details.max_quantity - @tour_details.recent_quantity) > 0 %>
                <% if @tour_details.time_start.to_date >= Date.current %>
                  <%= link_to t(".cofirm"), new_booking_path(tour_id: @tour_details.id),
                    class: "btn btn-outline-light w-100" %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
